<%- include("partials/header.ejs") %> 

<style>
    body{
        background-repeat: repeat;
        font-family: 'Montserrat', sans-serif;
        background-size: contain;
        border-color: black;
        border: black;
        opacity: 0.92;
    }
    .title h1{
        font-size: 75px;
        color: white;
        text-align: left;
        margin-bottom: 0%;
        padding: 10%;
    }

    .content{
        border: 2px black solid;
        display: flex;
        justify-content: center;
        margin-left: 5%;
        width: 90%;
        background-color: black;
        color: rgb(0,114,217);
        border-radius: 10px;
        margin-bottom: 5%;
    }

    .content p, .content li{
        font-weight: 500;
        margin-bottom: 5%;
        color: white;
    }

    .carousel .carousel-item {
        height: 350px;
        margin-bottom: 10%;
    }
    
    .carousel-item img {
        position: absolute;
        object-fit:cover;
        top: 0;
        left: 0;
        min-height: 500px;
    }

    h3{
        margin-top: 10%;
        margin-bottom: 2.5%;
    }

    h2{
        margin-top: 5%;
    }

    .buyfr{
        display : flex; 
        justify-content: space-evenly;
        margin-bottom: 4%;
    }

    .dev-details{
        display : flex; 
        justify-content: flex-start;
        margin-bottom: 4%;
    }

    .dev-details div{
        margin-right: 10%;
    }

    .buy{
        margin-top: 25%;
    }

    .btn-primary {
        color: #fff;
        background-color: rgb(0,114,217);
        border-color: rgb(0,114,217);
    }

    hr{
        border: 0; 
        height: 1px; 
        background-color: rgb(0,114,217);
        opacity: 0.9;
    }

    .comment-user{
        padding: 2.5%;
        border: 1px  rgb(0,114,217) solid;
        border-radius: 25px;
        margin-bottom: 2%;
    }

    footer{
        margin-top: 5%;
    }

    .btn-outline-primary{
        border-color: rgb(0,114,217);
        color:  rgb(0,114,217);
    }

</style>

<% var j = games.img.high_res[1] %> 

<body style="background-image: url('<%= j%>');">
    <link rel="stylesheet" href= "assets/css/gametest.css" type="text/css">
    <%- include("partials/nav.ejs") %>
    <div class="title">
        <h1 style="text-shadow: 5px 5px #000000;"><%= games.name%> </h1>
    </div>
    <div class="content">
        <div class="container">
            <h2 style="margin-bottom: 2%;">Screenshots:</h2>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="<%= games.img.high_res[0]%>" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="<%= games.img.high_res[1]%> " alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="<%= games.img.high_res[2]%>" alt="Third slide">
                </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="buyfr">
                <div><h3>Now Available for Purchase:</h3></div>
                <div><a class="btn btn-outline-success buy" href="#" role="button">Buy for â‚¹ <%= games.price%></a></div>
            </div>
            <hr>
            <div class="about">
                <h2>About the Game:</h2>
                <p class="desc"><%= games.desc%> </p>
                </div>
                <hr>
                <div class="dev-details">
                    <div>
                        <h3>Publisher : </h3> <p><%= games.dev%> </p>
                    </div>
                    <div>
                        <h3>Developer : </h3> <p><%= games.publisher%></p>
                    </div>
                </div>
                <hr>
                <div class="req">
                <h2 style="margin-bottom: 5%;">System Requirements</h2>
                <ul class="list" style="margin-bottom: 2.5%;">
                    <li>CPU: Intel Core i5-3570K or AMD FX-8310</li>
                    <li>RAM: 8 GB</li>
                    <li>OS: Windows 7 or later</li>
                    <li>VIDEO CARD: NVIDIA GeForce GTX 780 or AMD Radeon RX 470</li>
                    <li>PIXEL SHADER: 5.0</li>
                    <li>VERTEX SHADER: 5.0</li>
                    <li>FREE DISK SPACE: 70 GB</li>
                    <li>DEDICATED VIDEO RAM: 4 GB</li>
                </ul>
                </div>
                <hr>
                <div class="comments">
                    <h2>Comments from Users (1):</h2>
                    <br>
                    <div class="comment-user">
                        <h4>Luminous says:</h4>
                        <p>Amazing Game , with stunning graphics and gameplay.</p>
                    </div>
                    <hr>
                    <form action="" method="POST" class="comment-form">
                        <h3 style="margin-top:5%;">Leave a Comment:</h3>
                        <div class="form-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-left: 90%;">Submit</button>
                    </form>
                </div>
        </div>
    </div>

<%- include("partials/footer.ejs") %> 