<%- include("partials/header.ejs") %> 
<body>
    <link rel="stylesheet" href="/assets/css/list.css">
    <%- include("partials/nav.ejs") %> 
    <div class="main">
        <div class="container">
            <div class="search-term">
                <h1>Search for '<%= query%>'</h1>
            </div>
            <hr>
            <div class="results">
                <% let j=games.length %>
                    <% if(j==0){ %>
                        <h1 style="margin-left: 5%; margin-top: 5%;">No Results Found!</h1>
                    <% }  %>
                <ul style="list-style-type:none;">
                    <% games.forEach((game, i=0)=> { %>
                        <div class="query">
                            <a href="/game/<%= game.id%>"><img src="<%=  game.img.title_img%> " alt="<%= game.name%>"></a>
                            
                            <h3><span><%=  i+1%>.</span> <a href="/game/<%= game.id%>"> <%= game.name%></a></h3>
                            
                            <p><%= game.desc%></p>
                            
                        </div>
                        <% i = i+1 %> 
                    <% }) %> 
                    <li>
                        
                    </li>
                </ul>
            </div>
        </div>
    </div>
<%- include("partials/footer.ejs") %> 